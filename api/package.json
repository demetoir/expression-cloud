{
	"name": "expression-cloud-api",
	"version": "0.0.1",
	"description": "",
	"author": "demetoir",
	"private": true,
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" ",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "pm2-runtime ecosystem.config.jsy",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
		"typeorm:migration:create": "yarn typeorm migration:create -n",
		"typeorm:migration:run": "yarn typeorm migration:run",
		"typeorm:migration:revert": "yarn typeorm migration:revert"
	},
	"dependencies": {
		"@nestjs/common": "^7.0.0",
		"@nestjs/config": "^0.5.0",
		"@nestjs/core": "^7.0.0",
		"@nestjs/jwt": "^7.1.0",
		"@nestjs/passport": "^7.1.0",
		"@nestjs/platform-express": "^7.4.2",
		"@nestjs/swagger": "^4.5.11",
		"@nestjs/typeorm": "^7.1.0",
		"@nestjsx/crud": "^4.6.2",
		"@nestjsx/crud-typeorm": "^4.6.2",
		"chalk": "^4.1.0",
		"class-transformer": "^0.3.1",
		"class-validator": "^0.12.2",
		"expect-ct": "^0.3.0",
		"express-rate-limit": "^5.1.3",
		"helmet": "^3.23.3",
		"lodash": "^4.17.19",
		"morgan": "^1.10.0",
		"mysql": "^2.18.1",
		"nest-morgan": "^1.0.1",
		"nest-winston": "^1.3.5",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rotating-file-stream": "^2.1.3",
		"rxjs": "^6.5.4",
		"swagger-ui-express": "^4.1.4",
		"typeorm": "^0.2.25",
		"uuid": "^8.1.0",
		"winston": "^3.2.1",
		"winston-daily-rotate-file": "^4.5.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^7.4.1",
		"@nestjs/schematics": "^7.0.0",
		"@nestjs/testing": "^7.0.0",
		"@types/chai": "^4.2.11",
		"@types/express": "^4.17.3",
		"@types/express-rate-limit": "^5.0.0",
		"@types/helmet": "^0.0.47",
		"@types/jest": "25.2.3",
		"@types/lodash": "^4.14.159",
		"@types/morgan": "^1.9.1",
		"@types/node": "^13.9.1",
		"@types/passport": "^1.0.4",
		"@types/passport-jwt": "^3.0.3",
		"@types/passport-local": "^1.0.33",
		"@types/supertest": "^2.0.8",
		"@types/uuid": "^8.0.0",
		"@types/winston": "^2.4.4",
		"@typescript-eslint/eslint-plugin": "3.0.2",
		"@typescript-eslint/parser": "3.0.2",
		"chai": "^4.2.0",
		"csurf": "^1.11.0",
		"eslint": "7.1.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-import": "^2.20.1",
		"jest": "26.0.1",
		"jest-mock-extended": "^1.0.9",
		"lint-staged": "^10.2.10",
		"node-gyp": "^7.0.0",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"sqlite3": "^5.0.0",
		"supertest": "^4.0.2",
		"ts-jest": "26.1.0",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.6.2",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^3.7.4"
	},
	"lint-staged": {
		"{src,apps,libs,test}/**/*.ts": [
			"eslint --fix",
			"git add"
		]
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
